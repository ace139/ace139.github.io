---
import { format } from 'date-fns';
import Tags from './Tags.astro';

interface Props {
    url: string;
    title: string;
    description: string;
    date?: string;
    tags: string[];
}

const { url, title, description, date, tags } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
    <div class="p-6">
        {date && (
            <div class="flex items-center justify-between mb-2">
                <time datetime={date} class="text-sm text-gray-500 dark:text-gray-400">
                    {format(new Date(date), 'MMMM d, yyyy')}
                </time>
            </div>
        )}
        <h2 class="text-2xl font-bold mb-2 text-gray-900 dark:text-white">
            <a href={url} class="hover:text-indigo-600 dark:hover:text-indigo-400">
                {title}
            </a>
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mb-4">
            {description}
        </p>
        <Tags tags={tags} />
    </div>
</article>
