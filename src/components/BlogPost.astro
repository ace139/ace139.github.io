---
import { format } from 'date-fns';
import Tags from './Tags.astro';

interface Props {
  url: string;
  title: string;
  description: string;
  date?: string;
  tags: string[];
}

const { url, title, description, date, tags } = Astro.props;
---

<article
  class="group relative overflow-hidden rounded-2xl border border-gray-100 bg-white p-6 shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl dark:border-white/10 dark:bg-white/5"
>
  <div>
    {
      date && (
        <div class="mb-3 flex items-center justify-between">
          <time datetime={date} class="text-sm font-medium text-gray-500 dark:text-gray-400">
            {format(new Date(date), 'MMMM d, yyyy')}
          </time>
        </div>
      )
    }
    <h2 class="mb-3 text-2xl font-bold font-serif text-slate-900 group-hover:text-violet-600 dark:text-white dark:group-hover:text-violet-400 transition-colors">
      <a href={url}>
        {title}
      </a>
    </h2>
    <p class="mb-4 leading-relaxed text-slate-600 dark:text-slate-400">
      {description}
    </p>
    <Tags tags={tags} />
  </div>
</article>
