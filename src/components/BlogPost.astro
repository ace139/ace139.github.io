---
import { format } from 'date-fns';
import Tags from './Tags.astro';

interface Props {
  url: string;
  title: string;
  description: string;
  date?: string;
  tags: string[];
}

const { url, title, description, date, tags } = Astro.props;
---

<article
  class="overflow-hidden rounded-lg bg-white shadow-md transition-shadow hover:shadow-lg dark:bg-gray-800"
>
  <div class="p-6">
    {
      date && (
        <div class="mb-2 flex items-center justify-between">
          <time datetime={date} class="text-sm text-gray-500 dark:text-gray-400">
            {format(new Date(date), 'MMMM d, yyyy')}
          </time>
        </div>
      )
    }
    <h2 class="mb-2 text-2xl font-bold text-gray-900 dark:text-white">
      <a href={url} class="hover:text-indigo-600 dark:hover:text-indigo-400">
        {title}
      </a>
    </h2>
    <p class="mb-4 text-gray-600 dark:text-gray-300">
      {description}
    </p>
    <Tags tags={tags} />
  </div>
</article>
