---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav class="bg-white dark:bg-black border-b border-gray-200 dark:border-gray-800 fixed w-full top-0 z-50">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-xl font-bold text-purple-600">John Doe</a>
        </div>
      </div>
      
      <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
        <a 
          href="/" 
          class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
            currentPath === '' 
              ? 'border-purple-600 text-purple-600' 
              : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300'
          }`}
        >
          Home
        </a>
        <a 
          href="/blog" 
          class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
            currentPath === 'blog' 
              ? 'border-purple-600 text-purple-600' 
              : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300'
          }`}
        >
          Blog
        </a>
        <a 
          href="/projects" 
          class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
            currentPath === 'projects' 
              ? 'border-purple-600 text-purple-600' 
              : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300'
          }`}
        >
          Projects
        </a>
        <a 
          href="/about" 
          class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
            currentPath === 'about' 
              ? 'border-purple-600 text-purple-600' 
              : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300'
          }`}
        >
          About
        </a>
        <a 
          href="/resume" 
          class={`inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium ${
            currentPath === 'resume' 
              ? 'border-purple-600 text-purple-600' 
              : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300'
          }`}
        >
          Resume
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="sm:hidden flex items-center">
        <button
          type="button"
          class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-purple-600"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="sm:hidden hidden" id="mobile-menu">
    <div class="pt-2 pb-3 space-y-1">
      <a
        href="/"
        class={`${
          currentPath === ''
            ? 'bg-purple-50 dark:bg-purple-900 border-purple-600 text-purple-600'
            : 'border-transparent text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300'
        } block pl-3 pr-4 py-2 border-l-4 text-base font-medium`}
      >
        Home
      </a>
      <a
        href="/blog"
        class={`${
          currentPath === 'blog'
            ? 'bg-purple-50 dark:bg-purple-900 border-purple-600 text-purple-600'
            : 'border-transparent text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300'
        } block pl-3 pr-4 py-2 border-l-4 text-base font-medium`}
      >
        Blog
      </a>
      <a
        href="/projects"
        class={`${
          currentPath === 'projects'
            ? 'bg-purple-50 dark:bg-purple-900 border-purple-600 text-purple-600'
            : 'border-transparent text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300'
        } block pl-3 pr-4 py-2 border-l-4 text-base font-medium`}
      >
        Projects
      </a>
      <a
        href="/about"
        class={`${
          currentPath === 'about'
            ? 'bg-purple-50 dark:bg-purple-900 border-purple-600 text-purple-600'
            : 'border-transparent text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300'
        } block pl-3 pr-4 py-2 border-l-4 text-base font-medium`}
      >
        About
      </a>
      <a
        href="/resume"
        class={`${
          currentPath === 'resume'
            ? 'bg-purple-50 dark:bg-purple-900 border-purple-600 text-purple-600'
            : 'border-transparent text-gray-500 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:border-gray-300 hover:text-gray-700 dark:hover:text-gray-300'
        } block pl-3 pr-4 py-2 border-l-4 text-base font-medium`}
      >
        Resume
      </a>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('#mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
