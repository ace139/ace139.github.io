---
import { Icons as IconPaths } from '../config/icons';

interface Props {
  name: keyof typeof IconPaths;
  class?: string;
}

// Destructure props with proper renaming for className
const props = Astro.props;
const path = IconPaths[props.name];
const className = props.class ?? 'w-5 h-5';
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 20 20"
  fill="currentColor"
  class={className}
  aria-hidden="true"
  set:html={path}
/>
