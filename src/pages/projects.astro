---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: 'Food Blog Platform',
    description: 'A modern food blog platform built with Next.js and Sanity.io',
    tags: ['Next.js', 'Sanity.io', 'TailwindCSS'],
    github: 'https://github.com/johndoe/food-blog',
    demo: 'https://food-blog.demo.com'
  },
  {
    title: 'Travel Journal App',
    description: 'Mobile app for tracking travel experiences and sharing stories',
    tags: ['React Native', 'Firebase', 'Node.js'],
    github: 'https://github.com/johndoe/travel-journal',
    demo: 'https://travel-journal.demo.com'
  },
  {
    title: 'Recipe Finder',
    description: 'AI-powered recipe recommendation engine',
    tags: ['Python', 'TensorFlow', 'FastAPI'],
    github: 'https://github.com/johndoe/recipe-finder',
    demo: 'https://recipe-finder.demo.com'
  }
];
---

<Layout title="Projects | John Doe">
  <main class="py-12">
    <h1 class="text-4xl font-bold mb-8">Projects</h1>
    
    <div class="grid gap-8 md:grid-cols-2">
      {projects.map((project) => (
        <div class="border dark:border-gray-700 rounded-lg p-6 hover:shadow-lg transition-shadow">
          <h2 class="text-2xl font-semibold mb-3">{project.title}</h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">{project.description}</p>
          
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tags.map((tag) => (
              <span class="bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-100 px-2 py-1 rounded text-sm">
                {tag}
              </span>
            ))}
          </div>
          
          <div class="flex gap-4">
            <a 
              href={project.github}
              class="text-purple-600 hover:text-purple-500 flex items-center gap-1"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
              </svg>
              GitHub
            </a>
            <a 
              href={project.demo}
              class="text-purple-600 hover:text-purple-500 flex items-center gap-1"
              target="_blank"
              rel="noopener noreferrer"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              Live Demo
            </a>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
