---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Tags from '../components/Tags.astro';

const projects = await getCollection('projects');
projects.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Projects | Soumyo Dey">
  <main class="pt-20">
    <h1 class="mb-8 text-4xl font-bold">Projects</h1>

    <div class="grid gap-8 md:grid-cols-2">
      {
        projects.map((project) => (
          <div class="rounded-lg border p-6 transition-shadow hover:shadow-lg dark:border-gray-700">
            {project.data.heroImage && (
              <img
                src={project.data.heroImage}
                alt={project.data.title}
                class="mb-4 h-48 w-full rounded-lg object-cover"
              />
            )}
            <h2 class="mb-3 text-2xl font-semibold">{project.data.title}</h2>
            <p class="mb-4 text-gray-600 dark:text-gray-400">{project.data.description}</p>

            <div class="mb-4">{project.data.tags && <Tags tags={project.data.tags} />}</div>

            <div class="flex gap-4">
              {project.data.github && (
                <a
                  href={project.data.github}
                  class="flex items-center gap-1 text-purple-600 hover:text-purple-500"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
                  </svg>
                  GitHub
                </a>
              )}
              {project.data.demo && (
                <a
                  href={project.data.demo}
                  class="flex items-center gap-1 text-purple-600 hover:text-purple-500"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
                  </svg>
                  Live Demo
                </a>
              )}
              <a
                href={`/projects/${project.slug}`}
                class="ml-auto flex items-center gap-1 text-purple-600 hover:text-purple-500"
              >
                Learn More â†’
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </main>
</Layout>
