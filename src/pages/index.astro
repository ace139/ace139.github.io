---
import Layout from '../layouts/Layout.astro';
---

<Layout title="John Doe">
  <main class="flex flex-col items-center justify-center min-h-[calc(100vh-4rem)] py-12">
    <div class="text-center">
      <div class="relative w-32 h-32 mx-auto mb-8">
        <div class="absolute inset-0 bg-gradient-to-r from-white to-black rounded-full"></div>
        <img
          src="/profile.jpg"
          alt="Profile"
          class="relative w-full h-full rounded-full object-cover"
        />
      </div>
      
      <h1 class="text-4xl font-bold mb-4">John Doe</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
        A Man who travels the world eating noodles
      </p>
      
      <div class="flex justify-center space-x-6 mb-12">
        <a href="#" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">
          <span class="sr-only">Facebook</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
          </svg>
        </a>
        <a href="#" class="text-gray-600 hover:text-black dark:text-gray-400 dark:hover:text-white">
          <span class="sr-only">Twitter</span>
          <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <section class="py-16 bg-purple-50 dark:bg-purple-900/20 -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4">Subscribe to My Newsletter</h2>
      <p class="text-gray-600 dark:text-gray-400 mb-8">
        Get weekly updates about my food adventures, travel stories, and tech insights delivered straight to your inbox.
      </p>
      
      <div class="bg-white dark:bg-black rounded-lg shadow-md p-6">
        <iframe
          src="YOUR_SUBSTACK_EMBED_URL"
          width="100%"
          height="320"
          style="border:1px solid #EEE; background:white;"
          frameborder="0"
          scrolling="no"
          class="dark:border-gray-800 dark:bg-black"
        ></iframe>
      </div>

      <p class="text-sm text-gray-500 dark:text-gray-400 mt-4">
        Join {Math.floor(Math.random() * 900 + 100)} readers who love food and tech as much as I do!
      </p>
    </div>
  </section>
  
  <footer class="text-center py-8 text-sm text-gray-500">
    <p>John Doe {new Date().getFullYear()}</p>
    <p>Indigo theme by Kopplin</p>
  </footer>
</Layout>

<style>
  iframe {
    min-width: 480px;
    max-width: 100%;
    width: 100%;
    height: 320px;
    background: transparent;
  }

  @media (max-width: 480px) {
    iframe {
      min-width: 100%;
    }
  }
</style>
