---
import Layout from "../layouts/Layout.astro";
import { socials } from "../config/socials";
---

<Layout title="Soumyo Dey">
  <main
    class="flex flex-col items-center justify-center min-h-[calc(100vh-4rem)] py-12"
  >
    <div class="text-center">
      <div class="relative w-32 h-32 mx-auto mb-8">
        <div
          class="absolute inset-0 bg-gradient-to-r from-white to-black rounded-full"
        >
        </div>
        <img
          src="/whatsapp_profile.jpeg"
          alt="Profile"
          class="relative w-full h-full rounded-full object-cover"
        />
      </div>

      <h1 class="text-4xl font-bold mb-4">Soumyo Dey</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
        A Man who travels the world eating noodles
      </p>

      <div class="flex justify-center space-x-6 mb-12">
        {
          socials.map(({ url, icon, label }) => (
            <a
              href={url}
              class="text-gray-600 hover:text-purple-600 dark:text-gray-400 dark:hover:text-purple-400 transition-colors"
            >
              <i class={`${icon} text-2xl`} />
              <span class="sr-only">{label}</span>
            </a>
          ))
        }
      </div>
    </div>
  </main>

  <iframe
    src="https://stochasticmusings.substack.com/embed"
    height="320"
    class="rounded-lg border border-gray-200 dark:border-gray-800 bg-white dark:bg-black w-full dark:filter dark:invert"
  ></iframe>
</Layout>

<style>
  iframe {
    min-width: 480px;
    max-width: 100%;
    width: 100%;
    height: 320px;
    background: transparent;
  }

  @media (max-width: 480px) {
    iframe {
      min-width: 100%;
    }
  }
</style>
