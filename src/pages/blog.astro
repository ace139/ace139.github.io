---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Tags from '../components/Tags.astro';
import ResponsiveImage from '../components/ResponsiveImage.astro';

const posts = await getCollection('blog');
posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Blog | Soumyo Dey">
  <main class="pt-20">
    <h1 class="mb-8 text-4xl font-bold">Blog</h1>

    <div class="space-y-8">
      {
        posts.map((post) => (
          <article class="border-b border-gray-200 pb-8 dark:border-gray-700">
            {post.data.heroImage && (
              <a href={`/blog/${post.slug}`} class="mb-4 block">
                <ResponsiveImage
                  src={post.data.heroImage}
                  alt={post.data.title}
                  class="h-48 w-full rounded-lg object-cover"
                  loading="lazy"
                  sizes="(min-width: 1024px) 768px, 100vw"
                />
              </a>
            )}
            <h2 class="mb-2 text-2xl font-semibold">
              <a href={`/blog/${post.slug}`} class="transition-colors hover:text-purple-600">
                {post.data.title}
              </a>
            </h2>
            <time class="mb-3 block text-sm text-gray-500">
              {new Date(post.data.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
            {post.data.tags && (
              <div class="mb-4">
                <Tags tags={post.data.tags} />
              </div>
            )}
            <a
              href={`/blog/${post.slug}`}
              class="mt-4 inline-block text-purple-600 hover:text-purple-500"
            >
              Read more â†’
            </a>
          </article>
        ))
      }
    </div>
  </main>
</Layout>
