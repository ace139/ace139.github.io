          {
            experience.map((job) => (
              <div class="border-l-4 border-purple-600 pl-4">
                <h3 class="text-xl font-semibold">{job.title}</h3>
                <p class="mb-2 text-purple-600">
                  {job.company} | {job.period}
                </p>
                <p class="mb-3 text-gray-600 dark:text-gray-400">{job.description}</p>
                <div class="flex flex-wrap gap-2">
                  {job.skills.map((skill) => (
                    <span class="rounded bg-purple-100 px-2 py-1 text-sm text-purple-800 dark:bg-purple-900 dark:text-purple-100">
                      {skill}
                    </span>
                  ))}
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <section class="mb-12">
        <h2 class="mb-6 text-2xl font-semibold">Education</h2>
        <div class="space-y-6">
          {
            education.map((edu) => (
              <div>
                <h3 class="text-xl font-semibold">{edu.degree}</h3>
                <p class="text-purple-600">
                  {edu.school} | {edu.period}
                </p>
              </div>
            ))
          }
        </div>
      </section>

      <section>
        <h2 class="mb-6 text-2xl font-semibold">Skills</h2>
        <div class="flex flex-wrap gap-2">
          {
            skills.map((skill) => (
              <span class="rounded-full bg-gray-100 px-3 py-1 text-sm dark:bg-gray-800">
                {skill}
              </span>
            ))
          }
        </div>
      </section>
    </div>
