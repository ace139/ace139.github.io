---
import Layout from './Layout.astro';
import Tags from '../components/Tags.astro';
import ResponsiveImage from '../components/ResponsiveImage.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="mx-auto max-w-3xl pt-20">
    <div class="mb-8">
      {
        frontmatter.heroImage && (
          <ResponsiveImage
            src={frontmatter.heroImage}
            alt={frontmatter.title}
            class="mb-6 h-[400px] w-full rounded-lg object-cover"
            loading="eager"
            fetchpriority="high"
            sizes="(min-width: 768px) 768px, 100vw"
          />
        )
      }
      <h1 class="mb-4 text-4xl font-bold">{frontmatter.title}</h1>
      <div class="mb-8 flex items-center text-gray-600 dark:text-gray-400">
        <time datetime={frontmatter.date}>
          {
            new Date(frontmatter.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })
          }
        </time>
        {
          frontmatter.tags && (
            <div class="ml-4">
              <Tags tags={frontmatter.tags} />
            </div>
          )
        }
      </div>
    </div>

    <div class="prose dark:prose-invert max-w-none">
      <slot />
    </div>

    <div class="mt-12 border-t border-gray-200 pt-8 dark:border-gray-800">
      <a href="/blog" class="inline-flex items-center text-purple-600 hover:text-purple-500">
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Blog
      </a>
    </div>
  </article>
</Layout>

<style is:global>
  @reference "../styles/globals.css";

  .prose {
    @apply text-gray-900 dark:text-gray-100;
  }
  .prose h2 {
    @apply mb-4 mt-8 text-2xl font-bold;
  }
  .prose h3 {
    @apply mb-3 mt-6 text-xl font-bold;
  }
  .prose p {
    @apply mb-4;
  }
  .prose ul {
    @apply mb-4 list-disc pl-6;
  }
  .prose ol {
    @apply mb-4 list-decimal pl-6;
  }
  .prose code {
    @apply rounded bg-gray-100 px-1 py-0.5 dark:bg-gray-800;
  }
  .prose pre {
    @apply mb-4 overflow-x-auto rounded-lg bg-gray-100 p-4 dark:bg-gray-800;
  }
  .prose a {
    @apply text-purple-600 hover:text-purple-500;
  }
  .prose img {
    @apply my-8 rounded-lg;
  }
  .prose blockquote {
    @apply my-4 border-l-4 border-purple-600 pl-4 italic;
  }
</style>
