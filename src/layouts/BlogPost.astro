---
import Layout from './Layout.astro';
import BlogHeader from '../components/BlogHeader.astro';
import Tags from '../components/Tags.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="mx-auto max-w-3xl pt-4 md:pt-8">
    <BlogHeader
      title={frontmatter.title}
      subtitle={frontmatter.subtitle}
      date={new Date(frontmatter.date)}
      heroImage={frontmatter.heroImage}
    />
    
    {
      frontmatter.tags && (
        <div class="mt-6 mb-8">
          <Tags tags={frontmatter.tags} />
        </div>
      )
    }

    <div class="prose dark:prose-invert max-w-none prose-headings:font-sans prose-headings:font-semibold prose-a:text-[var(--color-primary-light)] dark:prose-a:text-[var(--color-primary-dark)] px-4 sm:px-6">
      <slot />
    </div>

    <div class="mt-16 border-t border-[var(--color-border-light)] pt-12 dark:border-[var(--color-border-dark)]">
      <a href="/blog" class="inline-flex items-center text-sm font-medium uppercase tracking-[0.2em] text-[var(--color-muted-light)] transition-colors hover:text-[var(--color-primary-light)] dark:text-[var(--color-muted-dark)] dark:hover:text-[var(--color-primary-dark)]">
        ‚Üê Back to Field Notes
      </a>
    </div>
  </article>
</Layout>
