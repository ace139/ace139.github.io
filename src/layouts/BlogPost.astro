---
import Layout from './Layout.astro';
import Tags from '../components/Tags.astro';
import ResponsiveImage from '../components/ResponsiveImage.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="mx-auto max-w-3xl pt-20">
    <div class="mb-8">
      {
        frontmatter.heroImage && (
          <ResponsiveImage
            src={frontmatter.heroImage}
            alt={frontmatter.title}
            class="mb-6 h-[400px] w-full rounded-lg object-cover"
            loading="eager"
            fetchpriority="high"
            sizes="(min-width: 768px) 768px, 100vw"
          />
        )
      }
      <h1 class="mb-4 text-4xl font-bold font-serif text-slate-900 dark:text-white">{frontmatter.title}</h1>
      <div class="mb-8 flex items-center text-slate-600 dark:text-slate-400">
        <time datetime={frontmatter.date}>
          {
            new Date(frontmatter.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })
          }
        </time>
        {
          frontmatter.tags && (
            <div class="ml-4">
              <Tags tags={frontmatter.tags} />
            </div>
          )
        }
      </div>
    </div>

    <div class="prose dark:prose-invert max-w-none">
      <slot />
    </div>

    <div class="mt-12 border-t border-gray-200 pt-8 dark:border-white/10">
      <a href="/blog" class="inline-flex items-center text-violet-600 hover:text-violet-500">
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Blog
      </a>
    </div>
  </article>
</Layout>
