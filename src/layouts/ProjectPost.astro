---
import Layout from './Layout.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="max-w-3xl mx-auto pt-20">
    <div class="mb-8">
      {frontmatter.heroImage && (
        <img
          src={frontmatter.heroImage}
          alt={frontmatter.title}
          class="w-full h-[400px] object-cover rounded-lg mb-6"
        />
      )}
      <h1 class="text-4xl font-bold mb-4">{frontmatter.title}</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-6">
        {frontmatter.description}
      </p>
      
      <div class="flex flex-wrap gap-2 mb-6">
        {frontmatter.tags?.map((tag: string) => (
          <span class="bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-100 px-2 py-1 rounded text-sm">
            {tag}
          </span>
        ))}
      </div>

      <div class="flex gap-4 mb-8">
        {frontmatter.github && (
          <a 
            href={frontmatter.github}
            class="inline-flex items-center gap-2 text-purple-600 hover:text-purple-500"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
            GitHub Repository
          </a>
        )}
        {frontmatter.demo && (
          <a 
            href={frontmatter.demo}
            class="inline-flex items-center gap-2 text-purple-600 hover:text-purple-500"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            Live Demo
          </a>
        )}
      </div>
    </div>

    <div class="prose dark:prose-invert max-w-none">
      <slot />
    </div>

    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
      <a href="/projects" class="text-purple-600 hover:text-purple-500 inline-flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Projects
      </a>
    </div>
  </article>
</Layout>

<style is:global>
  .prose {
    @apply text-gray-900 dark:text-gray-100;
  }
  .prose h2 {
    @apply text-2xl font-bold mt-8 mb-4;
  }
  .prose h3 {
    @apply text-xl font-bold mt-6 mb-3;
  }
  .prose p {
    @apply mb-4;
  }
  .prose ul {
    @apply list-disc pl-6 mb-4;
  }
  .prose ol {
    @apply list-decimal pl-6 mb-4;
  }
  .prose code {
    @apply bg-gray-100 dark:bg-gray-800 px-1 py-0.5 rounded;
  }
  .prose pre {
    @apply bg-gray-100 dark:bg-gray-800 p-4 rounded-lg mb-4 overflow-x-auto;
  }
  .prose a {
    @apply text-purple-600 hover:text-purple-500;
  }
  .prose img {
    @apply rounded-lg my-8;
  }
  .prose blockquote {
    @apply border-l-4 border-purple-600 pl-4 italic my-4;
  }
</style>
